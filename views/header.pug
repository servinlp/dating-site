html.no-js
  head
    title #{title} | Morbi | Dating voor serieuse
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    script document.querySelector("html").classList.remove("no-js")

    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    link(rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32")
    link(rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16")
    link(rel="manifest" href="/manifest.json")
    link(rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="theme-color" content="#ffffff")

    //- link(href="https://fonts.googleapis.com/css?family=Raleway:400,500,700" rel="stylesheet")

    link(rel="stylesheet" href="/style.css")
  body
    header.head
      a(href="/")
        img(src="/img/logo.svg" alt="morbi")
        h1 Morbi
      if adminIn
        button
          img(src="/profilepics/" + profilePic  alt="profile pic")
        nav
          ul
            li
              form(action="/die/admin/logout" method="POST")
                input(class="btn" type="submit" value="Log uit")
      else if loggedin
        button
          img(src="/profilepics/" + profilePic  alt="profile pic")
        nav
          ul
            li
              a(href="/app/account") Settings
            li
              a(href="/app/chat-overzicht") Jouw chats
            li
              form(action="/account/logout" method="POST")
                input(class="btn" type="submit" value="Log uit")
      else if register
        a(href="/account/registreren" class="btn") Registreren
      else
        a(href="/account" class="btn") Login
